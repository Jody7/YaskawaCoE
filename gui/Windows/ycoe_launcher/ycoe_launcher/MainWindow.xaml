<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ycoe_launcher"
        mc:Ignorable="d"
        Title="YaskawaCoE Launcher" Height="450" Width="493.962" Loaded="Window_onLoad" Icon="settings.png">
	<Grid HorizontalAlignment="Left" Width="480">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="91*"/>
			<ColumnDefinition Width="69*"/>
		</Grid.ColumnDefinitions>
		<ListBox x:Name="ListBox1" HorizontalAlignment="Left" Height="300" Margin="30,60,0,0" VerticalAlignment="Top" Width="420" Grid.ColumnSpan="2" FontWeight="Bold" FontStyle="Italic"/>
		<Button Content="Launch YaskawaCoE" HorizontalAlignment="Right" Height="30" Margin="0,0,30,15" VerticalAlignment="Bottom" Width="150" Click="LaunchBtn_Click" Grid.Column="1" FontWeight="Bold"/>
		<Label Content="Select Network Interface" HorizontalAlignment="Left" Margin="30,24,0,0" VerticalAlignment="Top" Width="150" FontWeight="Bold" Height="26"/>

	</Grid>
</Window>
