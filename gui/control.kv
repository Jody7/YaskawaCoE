<StsLabel@Button>:
    #size_hint:None,None
    #size:root.width/5,root.height/15
    text_size:self.size
    halign:'center'
    valign:'middle'

<controlWindow@FloatLayout>:
    controlarea: ctrl_area
    cmdlbl:cmd_lbl
    statuslbl:status_lbl
    fwdbtn:_fwdBtn
    bwdbtn:_bwdBtn
    cmdposbtn:_cmdposBtn
    postar:_postar
    possts:_possts
    statusword:_status
    controlword:_control
    RelativeLayout:
        id: ctrl_area
        size_hint:None,None
        size:root.width,root.height*12/15-30
        pos:0,root.height*2/15
        GridLayout:
            cols:2
            rows:4
            size_hint:None,None
            size:root.width/3,root.height*12/15-30
            StsLabel:
                text:"Target Position"
            StsLabel:
                id:_postar
            StsLabel:
                text:"Current Position"
            StsLabel:
                id:_possts
            StsLabel:
                text:"StatusWord"
            StsLabel:
                id:_status
            StsLabel:
                text:"ControlWord"
            StsLabel:
                id:_control
        GridLayout:
            rows:4
            size_hint:None,None
            size:root.width/3,root.height*2/5
            pos:root.width*1/2,root.height/2-self.height/2
            AbsMoveBtn:
                id:_fwdBtn
                text:'Goto 0xFFFFFF'
                on_press:self.move_absolute(b'\x03\xFF\xFF\xFF\x00')
            AbsMoveBtn:
                id:_bwdBtn
                text:'Home ZeroPos'
                on_press:self.move_absolute(b'\x03\x00\x00\x00\x00')
            CmdPosBtn:
                id:_cmdposBtn
                cmdpos:_cmdpos
                text:'Goto'
                on_press:self.move_cmdpos(self.cmdpos.text)
            TextInput:
                id:_cmdpos
    Label:
        id: cmd_lbl
        size_hint:None,None
        size:root.width,root.height/15
        pos:0,root.height/15
        halign: 'left'
        text_size: self.size
        text:"Last Command: "
    Label:
        id: status_lbl
        size_hint:None,None
        size:root.width,root.height/15
        pos:0,0
        halign: 'left'
        text_size: self.size
        text:"Status: "
