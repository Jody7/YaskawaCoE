<StsLabel@Button>:
    #size_hint:None,None
    #size:root.width/5,root.height/15
    text_size:self.size
    halign:'center'
    valign:'middle'

<controlWindow@FloatLayout>:
    controlarea: ctrl_area
    cmdlbl:cmd_lbl
    statuslbl:status_lbl
    fwdbtn:_fwdBtn
    bwdbtn:_bwdBtn
    cmdposbtn:_cmdposBtn
    postar:_postar
    possts:_possts
    statusword:_status
    controlword:_control
    RelativeLayout:
        id: ctrl_area
        size_hint:None,None
        size:root.width,root.height-30
        pos:0,30
        Label:
            size_hint:None,None
            size:160,30
            pos:100,510
            text: "Slave 1"
        GridLayout:
            cols:2
            rows:4
            size_hint:None,None
            size:300,200
            pos:30,300
            StsLabel:
                text:"Target Position"
            StsLabel:
                id:_postar
            StsLabel:
                text:"Current Position"
            StsLabel:
                id:_possts
            StsLabel:
                text:"StatusWord"
            StsLabel:
                id:_status
            StsLabel:
                text:"ControlWord"
            StsLabel:
                id:_control
        GridLayout:
            rows:4
            size_hint:None,None
            size:300,200
            pos:30,60
            AbsMoveBtn:
                id:_fwdBtn
                text:'Goto 0xFFFFFF'
                on_press:self.move_absolute(b'\x03\xFF\xFF\xFF\x00')
            AbsMoveBtn:
                id:_bwdBtn
                text:'Home ZeroPos'
                on_press:self.move_absolute(b'\x03\x00\x00\x00\x00')
            CmdPosBtn:
                id:_cmdposBtn
                cmdpos:_cmdpos
                text:'Goto'
                on_press:self.move_cmdpos(self.cmdpos.text)
            TextInput:
                id:_cmdpos
        GridLayout:
            cols:2
            rows:3
            size_hint:None,None
            size:root.width/3,root.height/5
            pos:450,300
            Label:
                text:"Slave Address"
            TextInput:
                id:_slaveaddr
            Label:
                text:"Register Address"
            TextInput:
                id:_regaddr
            Label:
                text:""
            RegReadBtn:
                id:_regReadBtn
                slaveaddr: _slaveaddr
                regaddr:_regaddr
                text:'Read Register'
                on_press:self.readreg(self.slaveaddr.text, self.regaddr.text)
        GridLayout:
            cols:2
            rows:4
            size_hint:None,None
            size:root.width/3,root.height/5
            pos:450,60
            Label:
                text:"Slave Address"
            TextInput:
                id:_coslaveaddr
            Label:
                text:"Index"
            TextInput:
                id:_coindex
            Label:
                text:"SubIndex"
            TextInput:
                id:_cosubindex
            Label:
                text:""
            ReadCOBtn:
                id:_ReadCOBtn
                coslaveaddr: _coslaveaddr
                coindex:_coindex
                cosubindex:_cosubindex
                text:'Read CO Parameter'
                on_press:self.readcoparam(self.coslaveaddr.text, self.coindex.text, self.cosubindex.text)
    Label:
        id: cmd_lbl
        size_hint:None,None
        size:root.width,15
        pos:0,15
        halign: 'left'
        text_size: self.size
        text:"Last Command: " + str(root.width) + "," + str(root.height)
    Label:
        id: status_lbl
        size_hint:None,None
        size:root.width,15
        pos:0,0
        halign: 'left'
        text_size: self.size
        text:"Status: "
